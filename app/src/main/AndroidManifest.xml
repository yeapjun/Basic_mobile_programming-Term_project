<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 인터넷 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 카메라 권한 (바코드 스캔) -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true" android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CalorieHunter"
        tools:targetApi="35">

        <!-- Main Activity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Scan Activity -->
        <activity
            android:name=".ui.ScanActivity"
            android:screenOrientation="portrait" />

        <!-- Battle Activity -->
        <activity
            android:name=".ui.BattleActivity"
            android:screenOrientation="portrait" />

        <!-- Inventory Activity -->
        <activity
            android:name=".ui.InventoryActivity"
            android:screenOrientation="portrait" />

        <!-- Daily Quest Activity -->
        <activity
            android:name=".ui.DailyQuestActivity"
            android:screenOrientation="portrait" />

        <!-- Nutrition Stats Activity -->
        <activity
            android:name=".ui.NutritionStatsActivity"
            android:screenOrientation="portrait" />

        <!-- Attendance Activity -->
        <activity
            android:name=".ui.AttendanceActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>
